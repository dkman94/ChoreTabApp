<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.choretab"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.choretab.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.choretab.WelcomeActivity"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name="com.example.choretab.AddRoomateActivity"
            android:label="@string/title_activity_add_roomate" >
        </activity>
        <activity
            android:name="com.example.choretab.EndActivity"
            android:label="@string/title_activity_end" >
        </activity>
        <activity
            android:name="com.example.choretab.ChoreTalkActivity"
            android:label="@string/title_activity_chore_talk" >
        </activity>
    </application>

</manifest>
